<!DOCTYPE html>
<html>
  <head>
    <title>Edit Note</title>
  </head>
  <body>
    <h1>Edit Note</h1>

    <% if (typeof messages !== 'undefined' && messages.error_msg) { %>
    <div class="alert alert-danger" role="alert"><%= messages.error_msg %></div>
    <% } %>

    <form action="/notes/<%= note.id %>/update" method="POST">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= note.title %>" />
      </div>
      <div>
        <label for="content">Content</label>
        <textarea id="content" name="content"><%= note.content %></textarea>
      </div>
      <button type="submit">Update Note</button>
    </form>
  </body>
</html>
